extends ../layout

block header
    - cur = "participacoes"

block content
    h1 #{title}
    form(method='POST', action='/participacoes/update/' + encodeURIComponent(participacao.cpf_rota) + '/' + encodeURIComponent(participacao.nome_arq))
        #form-group
            lable CPF Rotativo:
            input.form-control(name='cpf_rota', type='text', value=participacao.cpf_rota, disabled='disabled')
        #form-group
            lable Nome Arquivo:
            input.form-control(name='nome_arq', type='text', value=participacao.nome_arq, disabled='disabled')
        br
        #form-group
            lable CPF Diretor:
            input.form-control(name='cpf_diretor', type='text', value=participacao.cpf_diretor)
        #form-group
            lable Nome Roteiro:
            input.form-control(name='nome_rot', type='text', value=participacao.nome_rot)
        #form-group
            lable ID Contrato:
            input.form-control(name='id_contrato', type='text', value=participacao.id_contrato)
        br
        #form-group
            lable Tempo:
            input.form-control(name='tempo', type='text', value=participacao.tempo)
        br
        button.btn.btn-primary(type='submit')
            span.btn-label
                i.fa.fa-send
                |   Salvar
        |  
        button.btn.btn-danger(type='button', data-toggle='modal', data-target='#exampleModalCenter')
            span.btn-label
                i.fa.fa-trash
                |   Apagar Participação
    #exampleModalCenter.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLongTitle.modal-title Apagar Participação
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                .modal-body
                    | Deseja mesmo apagar a participação 
                    b= participacao.cpf_rota
                    | -
                    b= participacao.nome_arq
                    |?
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Cancelar
                    form(method='POST', action='/participacoes/delete')
                        input.form-control(name='cpf_rota', type='hidden', value=participacao.cpf_rota)
                        input.form-control(name='nome_arq', type='hidden', value=participacao.nome_arq)
                        button.btn.btn-danger(type='submit')
                            span.btn-label
                                i.fa.fa-send
                                |  Sim, apagar
