
extends ../layout


block header
    - cur = "gravacoes"

block content
    h1 #{title}
    form(method='POST', action='/gravacoes/add')
        #form-group
            lable Nome Arquivo:
            input.form-control(name='nome_arq', type='text', value=gravacao.nome_arq)
        #form-group
            lable CPF Diretor:
            input.form-control(name='cpf_diretor', type='text', value=gravacao.cpf_diretor)
        #form-group
            lable Nome Local:
            input.form-control(name='nome_loc', type='text', value=gravacao.nome_loc)
        br
        #form-group
            lable Nome Roteiro:
            input.form-control(name='nome_rot', type='text', value=gravacao.nome_rot)
        #form-group
            lable ID Contrato:
            input.form-control(name='id_contrato', type='text', value=gravacao.id_contrato)
        br
        #form-group
            lable Data Gravação:
            input.form-control(name='data_gravacao', type='date', value=gravacao.data_gravacao)
        #form-group
            lable Horário Chegada:
            input.form-control(name='hora_chegada', type='time', value=gravacao.hora_chegada)
        #form-group
            lable Horário Saída:
            input.form-control(name='hora_saida', type='time', value=gravacao.hora_saida)
        #form-group
            lable Valor:
            input.form-control(name='valor', type='text', value=gravacao.valor)
        br
        button.btn.btn-primary(type='submit')
            span.btn-label
                i.fa.fa-plus
                |   Adicionar